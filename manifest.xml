    <script>
        // Initialize Office.js with error handling
        function initializeBESdefense() {
            try {
                if (typeof Office !== 'undefined' && Office.onReady) {
                    Office.onReady((info) => {
                        console.log('BESdefense Quantum Interface - Outlook Mode');
                        console.log('Office Host:', info.host);
                        console.log('Office Platform:', info.platform);
                        
                        // Analyze current email when ready
                        if (info.host === Office.HostType.Outlook) {
                            analyzeCurrentEmail();
                        }
                    });
                } else {
                    console.log('BESdefense Quantum Interface - Browser Mode');
                    console.log('Available functions: generateExecutiveReport, openCommandCenter');
                    // Initialize demo mode
                    initializeDemoMode();
                }
            } catch (error) {
                console.log('BESdefense Quantum Interface - Demo Mode');
                initializeDemoMode();
            }
        }

        // Initialize demo mode for browser testing
        function initializeDemoMode() {
            // Set demo analysis results
            document.getElementById('emailClassification').textContent = 'SECURE';
            document.getElementById('confidenceLevel').textContent = '99.97%';
            document.getElementById('becRisk').textContent = 'MINIMAL';
            document.getElementById('protectionValue').textContent = '$285K+';
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            initializeBESdefense();
            createQuantumParticles();
        });

        // Create quantum particles optimized for narrow width
        function createQuantumParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 15; // Reduced for narrow width
            
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 8 + 's';
                particle.style.animationDuration = (8 + Math.random() * 4) + 's';
                particlesContainer.appendChild(particle);
            }
        }

        // Analyze current email with error handling
        function analyzeCurrentEmail() {
            try {
                if (typeof Office !== 'undefined' && Office.context && Office.context.mailbox && Office.context.mailbox.item) {
                    // Get email properties
                    const item = Office.context.mailbox.item;
                    
                    // Analyze sender
                    const sender = item.from || item.organizer;
                    let senderAnalysis = analyzeSender(sender);
                    
                    // Analyze subject
                    const subject = item.subject || '';
                    let subjectAnalysis = analyzeSubject(subject);
                    
                    // Get email body and analyze
                    item.body.getAsync(Office.CoercionType.Text, (result) => {
                        if (result.status === Office.AsyncResultStatus.Succeeded) {
                            const bodyText = result.value;
                            let bodyAnalysis = analyzeEmailBody(bodyText);
                            
                            // Combine analysis results
                            updateEmailAnalysis(senderAnalysis, subjectAnalysis, bodyAnalysis);
                        }
                    });
                } else {
                    // Fallback for demo mode
                    initializeDemoMode();
                }
            } catch (error) {
                console.log('BESdefense running in demo mode');
                initializeDemoMode();
            }
        }

        // Analyze sender reputation
        function analyzeSender(sender) {
            if (!sender) return { risk: 'MINIMAL', confidence: 99.97 };
            
            const senderEmail = sender.emailAddress || '';
            const trustedDomains = ['microsoft.com', 'outlook.com', 'gmail.com', 'company.com'];
            
            const domain = senderEmail.split('@')[1] || '';
            const isTrusted = trustedDomains.some(trusted => domain.includes(trusted));
            
            return {
                risk: isTrusted ? 'MINIMAL' : 'MODERATE',
                confidence: isTrusted ? 99.97 : 87.34,
                domain: domain
            };
        }

        // Analyze email subject
        function analyzeSubject(subject) {
            const suspiciousWords = ['urgent', 'immediate', 'verify', 'suspend', 'click here', 'wire transfer'];
            const foundSuspicious = suspiciousWords.some(word => 
                subject.toLowerCase().includes(word.toLowerCase())
            );
            
            return {
                risk: foundSuspicious ? 'HIGH' : 'MINIMAL',
                confidence: foundSuspicious ? 76.23 : 99.97,
                suspicious: foundSuspicious
            };
        }

        // Analyze email body content
        function analyzeEmailBody(bodyText) {
            const phishingIndicators = ['click here', 'verify account', 'suspended', 'urgent action'];
            const financialWords = ['wire transfer', 'payment', 'invoice', 'bank account'];
            
            let riskScore = 0;
            phishingIndicators.forEach(indicator => {
                if (bodyText.toLowerCase().includes(indicator.toLowerCase())) {
                    riskScore += 25;
                }
            });
            
            financialWords.forEach(word => {
                if (bodyText.toLowerCase().includes(word.toLowerCase())) {
                    riskScore += 15;
                }
            });
            
            const risk = riskScore > 50 ? 'HIGH' : riskScore > 20 ? 'MODERATE' : 'MINIMAL';
            const confidence = Math.max(60, 100 - riskScore);
            
            return { risk, confidence, riskScore };
        }

        // Update email analysis display
        function updateEmailAnalysis(senderAnalysis, subjectAnalysis, bodyAnalysis) {
            const overallRisk = Math.max(
                getRiskLevel(senderAnalysis.risk),
                getRiskLevel(subjectAnalysis.risk),
                getRiskLevel(bodyAnalysis.risk)
            );
            
            const overallConfidence = Math.min(
                senderAnalysis.confidence,
                subjectAnalysis.confidence,
                bodyAnalysis.confidence
            );
            
            const riskNames = ['MINIMAL', 'MODERATE', 'HIGH'];
            const finalRisk = riskNames[overallRisk];
            
            // Update display
            document.getElementById('emailClassification').textContent = 
                finalRisk === 'MINIMAL' ? 'SECURE' : finalRisk === 'MODERATE' ? 'SUSPICIOUS' : 'DANGEROUS';
            document.getElementById('confidenceLevel').textContent = overallConfidence.toFixed(2) + '%';
            document.getElementById('becRisk').textContent = finalRisk;
            
            // Update colors based on risk
            const elements = ['emailClassification', 'confidenceLevel', 'becRisk'];
            elements.forEach(id => {
                const element = document.getElementById(id);
                element.className = 'metric-value ' + (finalRisk === 'MINIMAL' ? 'secure' : finalRisk === 'MODERATE' ? 'warning' : 'danger');
            });
        }

        function getRiskLevel(risk) {
            switch(risk) {
                case 'MINIMAL': return 0;
                case 'MODERATE': return 1;
                case 'HIGH': return 2;
                default: return 0;
            }
        }

        // Generate executive report
        function generateExecutiveReport() {
            document.getElementById('executiveModal').style.display = 'block';
        }

        // Open command center
        function openCommandCenter() {
            document.getElementById('commandModal').style.display = 'block';
        }

        // Close modals
        function closeModal() {
            document.getElementById('executiveModal').style.display = 'none';
            document.getElementById('commandModal').style.display = 'none';
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const executiveModal = document.getElementById('executiveModal');
            const commandModal = document.getElementById('commandModal');
            if (event.target === executiveModal) {
                executiveModal.style.display = 'none';
            }
            if (event.target === commandModal) {
                commandModal.style.display = 'none';
            }
        }

        // Initialize particles when page loads
        // (Initialization moved to DOMContentLoaded above)
    </script>
