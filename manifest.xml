            width: 2px;
            height: 2px;
            background: #00d4ff;
            border-radius: 50%;
            animation: quantumFloat 8s infinite linear;
            opacity: 0.6;
        }

        @keyframes quantumFloat {
            0% { transform: translateY(100vh) translateX(0); opacity: 0; }
            10% { opacity: 1; }
            90% { opacity: 1; }
            100% { transform: translateY(-10px) translateX(20px); opacity: 0; }
